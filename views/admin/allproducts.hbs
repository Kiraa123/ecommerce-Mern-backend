<body>
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                {{!-- <th scope="row">{{this.productname}}</th> --}}
                <td>
                    <li>
                    <img src="uploads/{{this.image}}" style="height:60px;,width:60px;" />
                  </li>
                </td>
                <td>{{this.productname}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.price}}</td>
                <td>{{this.category}}</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            More
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="/admin/edit_product/{{this._id}}">Edit</a>
                            <a class="dropdown-item" href="/admin/products/deleteproduct/{{this._id}}"
                                onclick="return confirm('Are you want to Delete ?')">
                                <i class="bx bx-trash me-1"></i> Delete</a>
                            
                           

                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
        integrity="sha256-oa5io9gszzQSg3cF0NmOafHTs6+cmTuxU+oUDgZ1zBo=" crossorigin="anonymous"></script>

    <!-- Include Bootstrap JS (bundle) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-iVXEAgQCBQNOf0l4GqjXgF5f5I5/GyZgTCsCCnbKd8rPZPFF73VS9wbF5Yx1PiF"
        crossorigin="anonymous"></script>
</body>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    // Check if jQuery is defined before using it
    if (window.jQuery) {
        $(function () {
            $(".dropdown-menu").on('click', 'a', function () {
                $(this).parents('.dropdown').find('button').text($(this).text());
            });
        });
    } 
    
</script>