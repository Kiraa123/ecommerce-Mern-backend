{{> adminheader}}

<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
      <div class="col-md-12">

        <div class="card mb-0">
          {{#each orders.items}}
          <h5 class="card-header">Product Details </h5>
          <!-- Account -->
          <div class="card-body">
            <div class="d-flex align-items-start align-items-sm-center gap-4">
              <img src="../uploads/{{this.product.image}}" alt="user-avatar" class="d-block rounded"
                height="100" width="100" id="uploadedAvatar" />
              <div class="button-wrapper">
                <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                  <span class=""> Name : {{this.product.name}}</span>
                
                </label>
                
              </div>
            </div>
          </div>
          <hr class="my-0" />
          <div class="card-body">

              <div class="row">

                <div class="mb-3 col-md-6">
                  <label for="firstName" class="form-label">Quantity :</label>
                  <input class="form-control" placeholder="1" type="text" value="{{this.product.quantity}}" name="username" readonly />
                </div>
                <div class="mb-3 col-md-6">
                  <label for="lastName" class="form-label">Size :</label>
                  <input class="form-control" type="text" name="name" value="{{this.size}}" placeholder="size" readonly />
                </div>
                <div class="mb-3 col-md-6">
                  <label for="lastName" class="form-label">Price :</label>
                  <input class="form-control" name="price" placeholder="Rs :" value="Rs :{{this.product.price}}" id="price"
                    readonly />
                </div>
                <div class="mb-3 col-md-6">
                  <label for="lastName" class="form-label">category:</label>
                  <input class="form-control" type="email" name="category" placeholder="Category"value="{{this.product.category}}"
                    readonly />
                </div>

               
          </div>
          {{/each}}
          
          <!-- /Account -->
        </div>
        
      </div>
      <a href="/admin/orders" class="btn btn-primary mt-3 mb-4 text-white float-end">Back</a>
    </div>
    
  </div>