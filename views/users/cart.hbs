    <script>
        $(document).ready(function () {
            // Check if there is an applied coupon on page load
            var appliedCoupon = $('.badge-success').length > 0;

            // If an applied coupon is found, hide the "Apply" buttons
            if (appliedCoupon) {
                $('.new').hide();
            }
            $('.new').click(function (e) {
                e.preventDefault();
                var codeWithDiscount = $(this).data('code');
                var codeAndDiscount = codeWithDiscount.split('-');
                var code = codeAndDiscount[0];
                var discount = codeAndDiscount[1];
                var $clickedElement = $(this);

                $.ajax({
                    type: 'POST',
                    url: '/users/cart/coupon',
                    data: { code: code, discount: discount },
                    success: function (response) {
                        $('#totpriceLink1').text('Rs: ' + response.totalPrice);
                        $('.row .totlink').text('Rs: ' + (response.totalPrice + 50));

                        if ($clickedElement.siblings('.badge-success').length === 0) {
                            var appliedButtonHtml = '<span class="badge badge-success">Applied</span>';
                            appliedButtonHtml += '<a href="/users/coupon/remove"> &#10005;</a>';
                            $clickedElement.parent().append(appliedButtonHtml);

                            // Hide all other "Apply" buttons after applying a coupon
                            $('.new').hide();
                        }
                    },
                    error: function (error) {
                        console.error(error);
                    }
                });
            });
        });

    </script>
    <script>
        $(document).ready(function () {
            $('.delete a').click(function (e) {
                e.preventDefault();

                // Get the productId from the data-productid attribute
                var productId = $(this).data('productid');
                var currentElement = $(this).closest('.row');

                if (productId) {
                    $.ajax({
                        type: 'GET',
                        url: '/users/cart/delete/' + productId,
                        success: function (response) {
                            if (response === 'coupon') {
                                Swal.fire({
                                    icon: 'warning',
                                    title: 'First Remove Coupon!',
                                    text: 'then deleted Quantity',
                                    width: '300px',

                                })
                            }
                            else {
                                $('#totpriceLink').text('Rs: ' + response.totalPrice);
                                $('#totlink').text('Rs: ' + (response.totalPrice + 50));
                                $('#count').text(response.count + ' items');
                                currentElement.remove();
                            }
                        },
                        error: function (error) {
                            console.error(error);
                        }
                    });
                } else {
                    console.error('data-productid attribute is undefined');
                }
            });
        });
    </script>






